extends layout

block content
    main(class="user-detail-container")
        div(class="user-container")
            div(class="user-info")
                h2(class="username") #{thisUser.userDetails.username}
                div(class="bio") #{thisUser.userDetails.bio}
                div(class="date-jointed")  #{thisUser.userDetails.date}
            div(class="section-options")
                a(href="/users") See All Users
        div(class="posts-container" id="user-posts")
            if posts.length > 0
                each postDetail in posts
                    div(class="post-container")
                        h3(class="post-name") 
                            a(href="/post/" + postDetail.post._id) #{postDetail.post.subject}
                        div(class="post-content") #{postDetail.post.content}
            else
                div(class="post-container") This user hasn't posted anything.



    