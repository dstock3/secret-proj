extends layout

block content
    main(class="all-sections")
        each sectionDetail in sections
            div(class="section-container")
                h2(class="section-name") 
                    a(href= "section/" + sectionDetail.section._id ) #{sectionDetail.section.name}

                div(class="posts-container" id="section-posts")
                    each postDetail in posts
                        if sectionDetail.sectionID === postDetail.postSectionID
                            div(class="post-container")
                                h3(class="post-name") 
                                    a(href="/post/" + postDetail.post._id) #{postDetail.post.subject}