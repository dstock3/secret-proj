extends layout

block content
    main(class="user-list")
        div(class="users-container")
            each user in users
                div(class="user-container")
                    div(class="user-info")
                        h2(class="username") 
                            a(href="users/" + user.username) #{user.username}
                        div(class="bio") #{user.bio}
                        div(class="date-jointed")  #{user.date}